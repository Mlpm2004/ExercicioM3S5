@model DevInHouse.EFCoreApi.Application.ViewModels.LivroEditViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>LivroViewModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Publicacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Publicacao)
        </dd>
        <dt class = "col-sm-2">
           Autor
        </dt>
        <dd class = "col-sm-10">
            @Model.Autores.FirstOrDefault(a => a.Id==Model.AutorId).NomeCompleto
        </dd>
        <dt class = "col-sm-2">
            Categoria
        </dt>
        <dd class = "col-sm-10">
           @Model.Categorias.FirstOrDefault(a => a.Id==Model.CategoriaId).Nome
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" title="Edita Livro">
        <i class="bi bi-pencil-fill"></i>
    </a>
     <a asp-action="Index"  class="btn btn-primary" title="Voltar para Livros">
        <i class="bi bi-shop"></i>
    </a>
</div>
